<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:sys="using:System"
             x:Class="AntDesign.Sample.App"
			 RequestedThemeVariant="Light">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Assets/Styles/AntDesignSampleGeometry.axaml"/>
				<ResourceDictionary>
					<sys:String x:Key="FileNameDescription">文件名</sys:String>
					<sys:String x:Key="OKDescription">确定</sys:String>
					<sys:String x:Key="CancelDescription">取消</sys:String>
					<sys:String x:Key="ShowHiddenDescription">显示隐藏文件</sys:String>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
    <Application.Styles>
		<AntDesign/>
		<AntDesignDataGrid/>

		<Style Selector="DataGrid DataGridRow DataGridCell:nth-last-child(1)">
			<Setter Property="DataGridCellAssists.ForceRightGridLine" Value="True"/> 
			
		</Style>

		<StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
	</Application.Styles>
</Application>
