<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AntDesign.Sample.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AntDesign.Sample.Views.MainView"
             >
    <Design.DataContext>
      <viewModels:MainViewModel />
    </Design.DataContext>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.3*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Border  >
			
		</Border>

		<Grid Grid.Column="1">

			<StackPanel>
				<Button Content="1232323" Height="30" Width="120"/>
				<Button Content="1232323" Height="30" Width="120" IsEnabled="False"/>
				<Button Theme="{StaticResource PrimaryButtonTheme}" Content="1232323" Height="30" Width="120" IsEnabled="False"/>
				<Button Theme="{StaticResource PrimaryButtonTheme}" Content="1232323" Height="30" Width="120"/>

			 <RippleEffect BorderThickness="1" BorderBrush="Gray" Width="120" Height="120"/>
				
			</StackPanel>
			
		</Grid>
		
		
	</Grid>
	
	
</UserControl>
