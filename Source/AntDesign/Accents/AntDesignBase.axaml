<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	   xmlns:converters="clr-namespace:Avalonia.Controls.Converters;assembly=Avalonia.Controls">

	<Style.Resources>

		<!--Converters-->
		<converters:MarginMultiplierConverter x:Key="LeftThicknessFilterConverter" Indent="1" Left="True" />
		<converters:MarginMultiplierConverter x:Key="RightThicknessFilterConverter" Indent="1" Right="True" />

		<converters:CornerRadiusFilterConverter x:Key="LeftCornerRadiusFilterConverter" Filter="TopLeft, BottomLeft"/>
		<converters:CornerRadiusFilterConverter x:Key="RightCornerRadiusFilterConverter" Filter="TopRight, BottomRight"/>
		<converters:CornerRadiusFilterConverter x:Key="TopCornerRadiusFilterConverter" Filter="TopLeft, TopRight"/>
		<converters:CornerRadiusFilterConverter x:Key="BottomCornerRadiusFilterConverter" Filter="BottomLeft, BottomRight"/>
		<converters:CornerRadiusToDoubleConverter x:Key="TopLeftCornerRadiusConverter" Corner="TopLeft" />
		<converters:CornerRadiusToDoubleConverter x:Key="BottomRightCornerRadiusConverter" Corner="BottomRight" />

		<!--Global-->
		<x:Double x:Key="FontSize">14</x:Double>
		<CornerRadius x:Key="ControlCornerRadius">0</CornerRadius>
	
		<!--Button-->
		<Thickness x:Key="ButtonBorderThickness">1</Thickness>
		<Thickness x:Key="ButtonPadding">3</Thickness>
		<CornerRadius x:Key="ButtonCornerRadius">5</CornerRadius>
		
		<!--PathIcon-->
		<x:Double x:Key="IconHeight">20</x:Double>
		<x:Double x:Key="IconWidth">20</x:Double>

		<!--ScrollBar-->
		<x:Double x:Key="ScrollBarSize">16</x:Double>
		<x:Double x:Key="ScrollBarButtonArrowIconFontSize">8</x:Double>
		<x:Double x:Key="ScrollBarTrackBorderThemeThickness">0</x:Double>
		
		<!-- ScrollBar animation -->
		<TransformOperations x:Key="VerticalSmallScrollThumbScaleTransform">scaleX(0.125) translateX(-2px)</TransformOperations>
		<TransformOperations x:Key="HorizontalSmallScrollThumbScaleTransform">scaleY(0.125) translateY(-2px)</TransformOperations>


		<!--TextBox-->
		<x:Double x:Key="TextBoxMinHeight">30</x:Double>
		<x:Double x:Key="TextBoxMinWidth">100</x:Double>
		<Thickness x:Key="TextBoxBorderThickness">1</Thickness>
		<Thickness x:Key="TextBoxPadding">5,0,5,0</Thickness>
		<CornerRadius x:Key="TextBoxCornerRadius">5</CornerRadius>
		
		
		
		
	</Style.Resources>

	
	
	
	
</Style>
