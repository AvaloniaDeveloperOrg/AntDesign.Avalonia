<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:CompileBindings="True">
	<ControlTheme x:Key="{x:Type GridSplitter}" TargetType="GridSplitter">
		<Setter Property="Focusable" Value="True" />
		<Setter Property="MinWidth" Value="{DynamicResource GridSplitterMinWidth}" />
		<Setter Property="MinHeight" Value="{DynamicResource GridSplitterMinHeight}" />
		<Setter Property="Background" Value="{DynamicResource GridSplitterAltMediumLowBrush}" />
		<Setter Property="PreviewContent">
			<Template>
				<Rectangle Fill="{DynamicResource GridSplitterAccentBrush}" />
			</Template>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Border BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						CornerRadius="{TemplateBinding CornerRadius}"
						Background="{TemplateBinding Background}" />
			</ControlTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>
