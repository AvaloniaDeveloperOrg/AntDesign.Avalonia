<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<BuiltInComInteropSupport>true</BuiltInComInteropSupport>
		<RootNamespace>AntDesign</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<AvaloniaResource Include="Accents\*.axaml" />
		<AvaloniaResource Include="Accents\Dark\*.axaml" />
		<AvaloniaResource Include="Accents\Light\*.axaml" />
		<AvaloniaResource Include="*.axaml" />
		<AvaloniaResource Include="Styles\*.axaml" />
	</ItemGroup>

	<ItemGroup>                            
		<AvaloniaXaml Remove="Accents\Dark\Expander.axaml" />                            
		<AvaloniaXaml Remove="Accents\Light\Expander.axaml" />                            
		<AvaloniaXaml Remove="AntDesign.axaml" />                            
		<AvaloniaXaml Remove="Styles\ManagedFileChooser.axaml" />                  
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" />
		<PackageReference Include="PolySharp">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>build; analyzers</IncludeAssets>
		</PackageReference>
	</ItemGroup>

</Project>