<ResourceDictionary xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:converters="using:Avalonia.Controls.Converters"
					x:CompileBindings="True">

	<x:Double x:Key="DataGridHeaderFontSize">15</x:Double>
	<x:Double x:Key="DataGridHeaderHeight">45</x:Double>
	<x:Double x:Key="DataGridRowHeight">35</x:Double>

	<FontWeight x:Key="DataGridHeaderFontWeight">Bold</FontWeight>
	<Thickness x:Key="DataGridHeaderPadding">12,0,0,0</Thickness>
	<Thickness x:Key="DataGridSeparatorMargin">0</Thickness>

	<Thickness x:Key="DataGridBorderThickness">1</Thickness>
	<CornerRadius x:Key="DataGridCornerRadius">10,10,0,0</CornerRadius>
	<x:Double x:Key="DataGridScrollBarSize">16</x:Double>

	<x:Double x:Key="DataGridHeaderSortIconSize">8</x:Double>

	<Thickness x:Key="DataGridRowPadding">4</Thickness>
	<Thickness x:Key="DataGridRowVisualMargin">0</Thickness>

	<converters:CornerRadiusFilterConverter x:Key="DataGridLeftCornerRadiusFilterConverter" Filter="TopLeft, BottomLeft"/>
	<converters:CornerRadiusFilterConverter x:Key="DataGridTopCornerRadiusFilterConverter" Filter="TopLeft, TopRight"/>
	<converters:CornerRadiusFilterConverter x:Key="DataGridTopRightCornerRadiusFilterConverter" Filter="TopRight"/> 

</ResourceDictionary>
